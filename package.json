{
  "name": "app",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "tests": "jest --coverage --runInBand",
    "start": " node --inspect=0.0.0.0 app/bin/www"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/bin/www/**",
      "!**app.js**",
      "!**/persistance/**"
    ]
  },
  "dependencies": {
    "debug": "~2.6.9",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "http-status-codes": "1.3.0",
    "morgan": "~1.9.0",
    "validate-fields": "^5.1.1",
    "request": "2.88.0"
  },
  "devDependencies": {
    "eslint": "^5.8.0",
    "supertest": "3.3.0",
    "jest": "^23.6.0"
  }
}
